{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",   
    "prisma.config.ts",
    "prisma/seed.ts",
    "scripts/**/*.ts"
  ]
}
